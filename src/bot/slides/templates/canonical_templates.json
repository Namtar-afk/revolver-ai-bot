    "sector_mapping": {
      "luxury": "structured",
      "tech": "structured",
      "fashion": "creative",
      "food": "creative",
      "automotive": "structured",
      "events": "event"
    },
    "project_type_mapping": {
      "strategy": "structured",
      "campaign": "creative",
      "event": "event",
