          {
            "category": "MEDIA & DISTRIBUTION",
            "amount": "{{media_amount}}",
            "percentage": "{{media_percentage}}",
            "breakdown": "{{media_breakdown}}"
          },
          {
            "category": "TECHNOLOGY & PLATFORMS",
            "amount": "{{tech_amount}}",
            "percentage": "{{tech_percentage}}",
            "breakdown": "{{tech_breakdown}}"
          },
          {
            "category": "PARTNERSHIPS & ACTIVATIONS",
            "amount": "{{partnerships_amount}}",
            "percentage": "{{partnerships_percentage}}",
            "breakdown": "{{partnerships_breakdown}}"
          }
        ]
      },
      "dynamic_content": {
        "budget_allocation": {
          "based_on_brief": "Extract budget requirements",
          "based_on_ideas": "Allocate based on idea complexity",
          "based_on_sector": "Adjust for sector standards"
        }
      }
    }
  },
  "style_guides": {
