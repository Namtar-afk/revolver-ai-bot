        "titre": {
            "type": "string",
            "minLength": 1
        },
        "problème": {
            "type": "string",
            "minLength": 1
        },
        "objectifs": {
            "type": "array",
            "items": {
                "type": "string",
                "minLength": 1
            },
            "minItems": 1
        },
        "kpis": {
            "type": "array",
            "items": {
                "type": "string",
                "minLength": 1
            },
            "minItems": 1
        },
        "résumé": {
            "type": "string",
            "minLength": 1
        },
        "reformulation_interne": {
            "type": "string",
            "minLength": 1
        }
    },
    "required": ["titre", "problème", "objectifs", "kpis"],
    "additionalProperties": true
} 