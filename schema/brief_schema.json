{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Brief",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 3,
      "description": "Titre du projet ou de la mission"
    },
    "objectives": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 3
      },
      "minItems": 1,
      "description": "Liste des objectifs du brief"
    },
    "internal_reformulation": {
      "type": "string",
      "minLength": 5,
      "description": "Reformulation stratégique par l'équipe"
    },
    "summary": {
      "type": "string",
      "minLength": 5,
      "description": "Résumé synthétique utilisé dans les prompts LLM"
    }
  },
  "required": [
    "title",
    "objectives",
    "internal_reformulation",
    "summary"
  ]
}
