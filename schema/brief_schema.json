{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Brief",
  "type": "object",
  "properties": {
    "title": { "type": "string", "minLength": 3 },
    "objectives": {
      "type": "array",
      "items": { "type": "string", "minLength": 3 },
      "minItems": 1
    },
    "internal_reformulation": { "type": "string", "minLength": 5 },
    "summary": { "type": "string", "minLength": 5 }
  },
  "required": ["title", "objectives", "internal_reformulation", "summary"]
}
