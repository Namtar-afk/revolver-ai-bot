# =============================================================================
# REVOLVER AI BOT - CONFIGURATION PRODUCTION
# =============================================================================

# =============================================================================
# API KEYS - SERVICES EXTERNES
# =============================================================================

# OpenAI API (obligatoire pour l'IA)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Slack Bot (obligatoire pour le chatbot)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_APP_TOKEN=xapp-your-slack-app-token

# =============================================================================
# CONFIGURATION PRODUCTION
# =============================================================================

# Environnement
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Serveur
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Base de données (optionnel pour le backup)
DATABASE_URL=postgresql://user:password@localhost:5432/revolver_bot

# Redis (pour le rate limiting et cache)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# RATE LIMITING
# =============================================================================

# OpenAI API
OPENAI_RATE_LIMIT_REQUESTS_PER_MINUTE=60
OPENAI_RATE_LIMIT_TOKENS_PER_MINUTE=150000

# Slack API
SLACK_RATE_LIMIT_REQUESTS_PER_MINUTE=50

# Veille RSS
VEILLE_RATE_LIMIT_REQUESTS_PER_MINUTE=30

# =============================================================================
# MONITORING ET LOGS
# =============================================================================

# Logs
LOG_FILE_PATH=logs/revolver_bot.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Métriques
ENABLE_METRICS=true
METRICS_PORT=9090

# Alertes
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
ALERT_EMAIL=admin@company.com

# =============================================================================
# BACKUP ET STORAGE
# =============================================================================

# Dossiers de backup
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=30

# Stockage des présentations
PRESENTATIONS_DIR=presentations
PRESENTATIONS_RETENTION_DAYS=90

# Stockage des données de veille
VEILLE_DATA_DIR=data/veille
VEILLE_RETENTION_DAYS=60

# =============================================================================
# SCALING ET PERFORMANCE
# =============================================================================

# Pool de workers
MAX_WORKERS=8
WORKER_TIMEOUT=300

# Cache
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# Timeouts
PDF_PARSING_TIMEOUT=60
AI_ANALYSIS_TIMEOUT=120
VEILLE_COLLECTION_TIMEOUT=300

# =============================================================================
# SÉCURITÉ
# =============================================================================

# CORS
ALLOWED_ORIGINS=https://your-domain.com,https://app.your-domain.com

# Authentification API (optionnel)
API_KEY_HEADER=X-API-Key
API_KEYS=key1,key2,key3

# Chiffrement
SECRET_KEY=your-secret-key-for-encryption

# =============================================================================
# CONFIGURATION SPÉCIFIQUE
# =============================================================================

# Veille
VEILLE_MAX_ARTICLES_PER_SOURCE=20
VEILLE_MIN_RELEVANCE_SCORE=0.3
VEILLE_DEFAULT_AGE_HOURS=24

# Présentations
PRESENTATION_MAX_SLIDES=15
PRESENTATION_DEFAULT_THEME=professional

# PDF Parser
PDF_MAX_FILE_SIZE_MB=100
PDF_EXTRACTION_TIMEOUT=30 